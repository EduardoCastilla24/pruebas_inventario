---
import { SignedOut, SignInButton } from "@clerk/astro/components";
---

<div class="min-h-[45rem] h-screen parent">
    <section class="hidden w-full h-screen p-8 lg:flex div1">
        <img class="object-cover rounded-3xl" src="/assets/img/bg.webp" alt="" />
    </section>
    <section class="flex items-center justify-center !col-span-5 p-8 div2 lg:!col-span-2">
        <div class="flex flex-col items-center justify-center w-8/12 gap-8">

            <article class="flex flex-col items-center justify-center gap-4">
                <h2 class="text-3xl font-bold text-aqua-500 ">¡Bienvenido!</h2>
                <p class="text-sm">Por favor, ingrese sus credenciales para iniciar sesión.</p>
            </article>
            <SignedOut>
                <SignInButton mode="modal" oauthFlow="popup" fallbackRedirectUrl="/Inicio" class:list={'bg-[#2c4382] w-10/12 max-w-[20rem] text-white flex items-center justify-center gap-2 px-4 h-10 rounded-md'}>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" class="icon icon-tabler icons-tabler-filled icon-tabler-brand-google __web-inspector-hide-shortcut__" data-astro-cid-b2fdlob7=""><path stroke="none" d="M0 0h24v24H0z" fill="none" data-astro-cid-b2fdlob7=""></path><path d="M12 2a9.96 9.96 0 0 1 6.29 2.226a1 1 0 0 1 .04 1.52l-1.51 1.362a1 1 0 0 1 -1.265 .06a6 6 0 1 0 2.103 6.836l.001 -.004h-3.66a1 1 0 0 1 -.992 -.883l-.007 -.117v-2a1 1 0 0 1 1 -1h6.945a1 1 0 0 1 .994 .89c.04 .367 .061 .737 .061 1.11c0 5.523 -4.477 10 -10 10s-10 -4.477 -10 -10s4.477 -10 10 -10z" data-astro-cid-b2fdlob7=""></path></svg>
                    <p class="!text-white tracking-wider">Iniciar Sesión con google</p>
                </SignInButton>
            </SignedOut>
        </div>
    </section>
</div>

<style>
    .parent {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        grid-template-rows: repeat(5, 1fr);
    }

    .div1 {
        grid-column: span 3 / span 3;
        grid-row: span 5 / span 5;
    }

    .div2 {
        grid-column: span 2 / span 2;
        grid-row: span 5 / span 5;
        grid-column-start: 4;
    }
    </style>