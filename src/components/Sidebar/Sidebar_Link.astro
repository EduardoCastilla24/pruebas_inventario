---
interface Props {
    title?: string;
}

const {title} = Astro.props;

const currentPath = Astro.url.pathname;

---

<li>
    <a href={`/${title}`}
    class={`flex items-center p-2 text-xs rounded-lg hover:border transition-all duration-150 ease-in-out hover:-translate-y-1
        ${
            (currentPath === '/' && title?.toLowerCase() === 'inicio') || currentPath.startsWith(`/${title}`)
            ? 'bg-[#2c4382] text-gray-100'
            : 'text-[#2c4382] hover:border-[#2c4382] hover:bg-gray-100'
        }`}>
        <slot/>
        <span class="ms-2.5">{title}</span>
    </a>
</li>